<launch>
    <!-- Load robot description parameter -->
    <param name="robot_description" textfile="$(find xarm7)/xarm7.urdf" />
    
    <!-- Start robot state publisher -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
    
    <!-- Start joint state publisher with GUI -->
    <node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" />
    
    <!-- Start RViz with absolute path -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d /root/catkin_ws/src/xarm7/config/xarm7.rviz" required="true" />
</launch> 